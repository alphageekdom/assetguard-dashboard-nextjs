datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Theme {
  dark
  light
  default
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  theme    Theme    @default(default)
  budgets  Budget[]
}

model Budget {
  id          Int      @id @default(autoincrement())
  userId      Int
  year        Int
  month       Int?     // Nullable for yearly budgets, non-nullable for monthly
  totalBudget Float
  expenses    Expense[]
  user        User     @relation(fields: [userId], references: [id])
}

model Expense {
  id          Int     @id @default(autoincrement())
  budgetId    Int
  category    String
  amount      Float
  date        DateTime
  description String
  budget      Budget  @relation(fields: [budgetId], references: [id])
}
